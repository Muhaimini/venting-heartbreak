{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext", // Use ESNext for modern features
    "module": "ESNext", // Keep module as ESNext for tree-shaking
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "strict": true, // Enable strict type-checking options
    "jsx": "react-jsx", // JSX transform for React
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "types": ["jest", "node"], // Types for Jest and Node.js
    "baseUrl": "src", // Base URL for module resolution
    "paths": {
      "~/*": ["*"] // Alias for module imports
    }
  },
  "include": [
    "src", // Include the src directory
    "tests", // Include the tests directory
    "types/**/*.d.ts" // Include custom type definitions
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist" // Exclude the dist directory
  ],
  "typeRoots": ["./node_modules/@types", "./types"]
}
